<div class="row align-center">
	<div class="columns small-7">

		<a href="<%= root_path %>"><div class="logo">
			<div class="logo-sub">Search API</div>
		</div></a>

		<%= form_tag '/main', method: 'get' do %>
		<div class="input-group">
			<%= text_field_tag :q, @q, class: 'input-group-field'%>
			<div class="input-group-button">
				<%= submit_tag 'Search', class: 'button primary large hollow' %>
			</div>
		</div>
		<% end %>

		<div data-animate="scale-in-up" class="card slow ease">
			<div class="card-section">
		<% if @result %>
			<% unless @result.empty? %>
				<%= render 'list' %>
			<% else %>
				<p>Sorry, not found</p>
			<% end %>
		<% else %>
			<p>Enter the request</p>
		<% end %>
			</div>
		</div>

	</div>
</div>